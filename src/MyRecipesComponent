function MyRecipesComponent({propsLabel, propsCuisineType,propsImage,propsIngredients,propsCalories}){
    return(
        <div >

<div className="container">
    <h2>{propsLabel}</h2>
</div>

<div className="container">
<p>{propsCuisineType}</p>
</div>

<div className="container">
    <img className="main_picture" src = {propsImage} alt="recipe"/>
</div>

<ul className="list">
    {propsIngredients.map((item,index)=>(
           <li key={index}>
            <img className="icons_check" src="https://img.icons8.com/laces/512/ok.png" alt ="icon-check"/>
            {item}
           </li>

    ))}
</ul>
<div  className="container">
    <p>{propsCalorie.toFixed()} calories</p>
</div>
        </div>
    )
}

export default MyRecipesComponent;